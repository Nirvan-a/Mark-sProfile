# Nginx 反向代理配置示例
# 将此文件复制到 /etc/nginx/sites-available/profile-page-api
# 然后创建软链接: sudo ln -s /etc/nginx/sites-available/profile-page-api /etc/nginx/sites-enabled/
# 重新加载: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name your-api-domain.com;  # 修改为你的域名或 IP

    # 如果需要 HTTPS，取消下面的注释并配置 SSL 证书
    # listen 443 ssl http2;
    # ssl_certificate /path/to/your/cert.pem;
    # ssl_certificate_key /path/to/your/key.pem;

    # 日志
    access_log /var/log/nginx/profile-page-api-access.log;
    error_log /var/log/nginx/profile-page-api-error.log;

    # 客户端上传文件大小限制
    client_max_body_size 100M;

    # API 代理
    location / {
        proxy_pass http://127.0.0.1:8001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # 超时设置（重要：某些请求可能需要较长时间）
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
    }

    # 健康检查
    location /api/health {
        proxy_pass http://127.0.0.1:8001/api/health;
        access_log off;
    }
}
